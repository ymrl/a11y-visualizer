{
  "name": "@a11y-visualizer/browser-extension",
  "description": "Web accessibility visualizer browser extension",
  "private": true,
  "version": "6.6.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:safari": "wxt build -b safari",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "lint": "biome check src entrypoints ",
    "lint-fix": "biome check --fix src entrypoints",
    "test": "vitest run --config vite.test.config.ts",
    "test:jsdom": "vitest run --config vite.test.jsdom.config.ts",
    "test:jsdom:watch": "vitest --config vite.test.jsdom.config.ts",
    "test:watch": "vitest --config vite.test.config.ts",
    "postinstall": "wxt prepare",
    "bump_version": "pnpm version --no-git-tag-version"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.5.0",
    "dom-accessibility-api": "^0.6.3",
    "i18next": "^23.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.0",
    "react-icons": "^5.0.1",
    "react-shadow": "^20.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitest/browser": "^3.2.2",
    "@wxt-dev/module-react": "^1.1.3",
    "autoprefixer": "^10.4.21",
    "playwright": "^1.52.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.0",
    "wxt": "^0.20.7"
  }
}
