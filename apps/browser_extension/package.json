{
  "name": "@a11y-visualizer/browser-extension",
  "description": "Web accessibility visualizer browser extension",
  "private": true,
  "version": "6.0.2",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "lint": "prettier . --check && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint-fix": "prettier . --write && eslint . --ext ts,tsx --fix",
    "test": "run-p test:*",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:wxt": "vitest run --config vitest.wxt.config.ts",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:ui": "playwright test --ui",
    "build:test": "wxt build --mode test",
    "test:install": "playwright install chromium",
    "postinstall": "wxt prepare",
    "bump_version": "pnpm version --no-git-tag-version"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.5.0",
    "dom-accessibility-api": "^0.6.3",
    "i18next": "^23.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.0",
    "react-icons": "^5.0.1",
    "react-shadow": "^20.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@playwright/test": "^1.53.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitest/browser": "^3.2.2",
    "@wxt-dev/module-react": "^1.1.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "happy-dom": "^18.0.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.53.0",
    "postcss": "^8.5.4",
    "prettier": "3.2.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.0",
    "wxt": "^0.20.7"
  }
}
